<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="set_cart_lines" inherit_id="website_sale.cart_lines"
              name="Set Cart Lines">

        <!-- NOTE: This cart lines table has some visual changes. -->

        <!-- Save variable in view -->
        <xpath expr="//t[@t-as='line']" position="before">
            <t t-set="parent_products"
               t-value="website_sale_order.website_order_line.mapped('set_parent_product_id')"/>
        </xpath>

        <!-- Filter out non-set lines -->
        <xpath expr="//t[@t-as='line']" position="attributes">
            <attribute name="t-foreach">website_sale_order.website_order_line.filtered(
                lambda l: not l.set_parent_product_id)</attribute>
        </xpath>

        <!-- Add set lines -->
        <xpath expr="//tbody" position="inside">
            <t t-if="parent_products">
                <t t-foreach="parent_products" t-as="parent">
                    <tr>
                        <td align="center" class='td-img'>
                            <span t-if="parent.image_128">
                                <img t-att-src="image_data_uri(parent.image_128)"
                                     class="img o_image_64_max rounded"
                                     t-att-alt="parent.name"/>
                            </span>
                            <span t-else=""
                                  t-field="parent.image_128"
                                  t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded o_image_64_max'}"
                            />
                        </td>
                        <td class='td-product_name' colspan="5">
                            <div>
                                <a t-att-href="parent.website_url">
                                    <t t-out="0"/>
                                    <strong t-field="parent.with_context(display_default_code=False).display_name"/>
                                </a>
                            </div>
                            <span t-esc="'[%s]' % parent.default_code"
                                  class="text-muted"/>
                        </td>
                    </tr>
                    <t t-foreach="website_sale_order.website_order_line.filtered(lambda l: l.set_parent_product_id == parent)"
                       t-as="line">
                        <tr t-att-class="'optional_product info' if line.linked_line_id else None">
                            <td class="border-0 text-center text-muted d-none d-md-table-cell"><i class="fa fa-chevron-right"></i></td>
                            <td t-if="not line.product_id" colspan="2" class='td-img'/>
                            <t t-else="">
                                <td align="center" class='td-img'>
                                    <span t-if="line._is_not_sellable_line() and line.product_id.image_128">
                                        <img t-att-src="image_data_uri(line.product_id.image_128)"
                                             class="img o_image_64_max rounded"
                                             t-att-alt="line.name_short"/>
                                    </span>
                                    <span t-else=""
                                          t-field="line.product_id.image_128"
                                          t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded o_image_64_max'}"
                                    />
                                </td>
                                <td class='td-product_name'>
                                    <div>
                                        <a t-att-href="line.product_id.website_url" class="text-dark">
                                            <t t-out="0"/>
                                            <strong t-field="line.name_short"/>
                                        </a>
                                    </div>
                                    <span t-esc="'[%s]' % line.product_id.default_code" class="text-muted"/>
                                </td>
                                <td class="text-center td-price" name="price">
                                    <t t-set="combination"
                                       t-value="line.product_id.product_template_attribute_value_ids + line.product_no_variant_attribute_value_ids"/>
                                    <t t-set="combination_info"
                                       t-value="line.product_id.product_tmpl_id._get_combination_info(combination, pricelist=website_sale_order.pricelist_id, add_qty=line.product_uom_qty)"/>

                                    <t groups="account.group_show_line_subtotals_tax_excluded">
                                        <span t-field="line.price_reduce_taxexcl"
                                              style="white-space: nowrap;"
                                              t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                                    </t>
                                    <t groups="account.group_show_line_subtotals_tax_included">
                                        <span t-field="line.price_reduce_taxinc"
                                              style="white-space: nowrap;"
                                              t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                                    </t>
                                    <t t-if="line.discount">
                                        <del t-attf-class="#{'text-danger mr8'}"
                                             style="white-space: nowrap;"
                                             t-esc="combination_info['list_price']"
                                             t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                                    </t>
                                    <!--                                <small t-if="not line._is_not_sellable_line() and line.product_id.base_unit_price"-->
                                    <!--                                       class="cart_product_base_unit_price d-block text-muted"-->
                                    <!--                                       groups="website_sale.group_show_uom_price">-->
                                    <!--                                    <t t-call='website_sale.base_unit_price'>-->
                                    <!--                                        <t t-set='product' t-value='line.product_id'/>-->
                                    <!--                                    </t>-->
                                    <!--                                </small>-->
                                </td>
                            </t>
                            <td class="text-center td-qty">
                                <div class="css_quantity input-group mx-auto justify-content-center">
                                    <t t-if="not line._is_not_sellable_line()">
                                        <t t-if="show_qty">
                                            <a t-attf-href="#"
                                               class="btn btn-link js_add_cart_json d-none d-md-inline-block"
                                               aria-label="Remove one"
                                               title="Remove one">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                            <input type="text"
                                                   class="js_quantity form-control quantity"
                                                   t-att-data-line-id="line.id"
                                                   t-att-data-product-id="line.product_id.id"
                                                   t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"/>
                                            <t t-if="line._get_shop_warning(clear=False)">
                                                <a t-attf-href="#" class="btn btn-link">
                                                    <i class='fa fa-warning text-warning'
                                                       t-att-title="line._get_shop_warning()"
                                                       role="img" aria-label="Warning"/>
                                                </a>
                                            </t>
                                            <a t-else='' t-attf-href="#"
                                               class="btn btn-link float_left js_add_cart_json d-none d-md-inline-block"
                                               aria-label="Add one" title="Add one">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </t>
                                        <t t-else="">
                                            <input type="hidden"
                                                   class="js_quantity form-control quantity"
                                                   t-att-data-line-id="line.id"
                                                   t-att-data-product-id="line.product_id.id"
                                                   t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"/>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <span class="text-muted w-100"
                                              t-esc="int(line.product_uom_qty)"/>
                                        <input type="hidden"
                                               class="js_quantity form-control quantity"
                                               t-att-data-line-id="line.id"
                                               t-att-data-product-id="line.product_id.id"
                                               t-att-value="line.product_uom_qty"/>
                                    </t>
                                </div>
                            </td>
                            <td class="text-center td-subtotal d-none d-md-table-cell"
                                name="subtotal">
                                <span t-field="line.price_subtotal"
                                      style="white-space: nowrap;"
                                      t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                            </td>
                            <td class="td-action">
                                <a href='#' aria-label="Remove from cart"
                                   title="Remove from cart"
                                   class='js_delete_product no-decoration'><small><i
                                        class='fa fa-trash-o'></i></small></a>
                            </td>
                        </tr>
                    </t>
                </t>
            </t>
        </xpath>

    </template>
</odoo>
